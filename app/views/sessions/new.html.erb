<article id="main">
<h1>Sign in</h1>
<p>Please login.</p>

<%= form_for(:session, :url => sessions_path) do |f| %>
			<%# :session parameter first gets you the prefix in for, id and name attributes of the form elements %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
	<p>New user? <%= link_to  "Sign up now!", signup_path %></p>
<% end %>
</article>

